

{{#if user}}

<!-- Profile Card simplificado para funcionar con el layout -->
<div class="max-w-md mx-auto">
  <!-- Breadcrumb -->
  <nav class="flex mb-6" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <a href="/" class="text-gray-600 hover:text-gray-900 text-sm font-medium">
          Inicio
        </a>
      </li>
      <li>
        <div class="flex items-center">
          <span class="text-gray-400 mx-2">/</span>
          <span class="text-gray-500 text-sm font-medium">Mi Perfil</span>
        </div>
      </li>
    </ol>
  </nav>

  <!-- Profile Card -->
  <div class="bg-gray-50 rounded-2xl shadow-lg overflow-hidden">
    <!-- Header with icon -->
    <div class="px-6 py-6 text-center border-b border-gray-100">
      <div class="flex items-center justify-center mb-4">
        <svg class="w-6 h-6 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <h1 class="text-xl font-semibold text-gray-900">Mi Perfil</h1>
      </div>
      
      <!-- Avatar -->
      <div class="flex justify-center mb-4">
        <div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center">
          <span class="text-white text-2xl font-bold">
            {{substring user.firstname 0 1}}{{substring user.lastname 0 1}}
          </span>
        </div>
      </div>
      
      <!-- Name and Email -->
      <h2 class="text-xl font-semibold text-gray-900 mb-1">{{user.firstname}} {{user.lastname}}</h2>
      <p class="text-gray-600 text-sm">{{user.email}}</p>
    </div>

    <!-- Profile Information -->
    <div class="px-6 py-6 space-y-4 bg-white">
      <!-- Role -->
      <div class="flex justify-between items-center py-3 px-4 bg-gray-50 rounded-lg">
        <span class="text-sm font-medium text-gray-600">Rol:</span>
        <span class="text-sm text-gray-900 capitalize">{{user.role}}</span>
      </div>
      
      <!-- Age -->
      <div class="flex justify-between items-center py-3 px-4 bg-gray-50 rounded-lg">
        <span class="text-sm font-medium text-gray-600">Edad:</span>
        <span class="text-sm text-gray-900">{{user.age}}</span>
      </div>
      
      <!-- Phone -->
      <div class="flex justify-between items-center py-3 px-4 bg-gray-50 rounded-lg">
        <span class="text-sm font-medium text-gray-600">Teléfono:</span>
        <span class="text-sm text-gray-500">11-5099-0913</span>
      </div>
      
      <!-- Address -->
      <div class="flex justify-between items-center py-3 px-4 bg-gray-50 rounded-lg">
        <span class="text-sm font-medium text-gray-600">Dirección:</span>
        <span class="text-sm text-gray-500">Calle Falsa 123, González Catán</span>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="px-6 py-6 space-y-3 bg-white">
      <!-- Edit Profile Button -->
      <button 
        onclick="editProfile()"
        class="w-full flex items-center justify-center px-4 py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Editar Perfil
      </button>
      
      <!-- Logout Button -->
      <button 
        onclick="logout()"
        class="w-full flex items-center justify-center px-4 py-3 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 transition-colors"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 713-3h4a3 3 0 013 3v1"></path>
        </svg>
        Cerrar Sesión
      </button>
    </div>
  </div>
</div>

<script>
  function editProfile() {
    alert('Funcionalidad de editar perfil próximamente');
  }
  
  function logout() {
    if (confirm('¿Estás seguro de que quieres cerrar sesión?')) {
      window.location.href = '/logout';
    }
  }
</script>

{{else}}
<!-- DEBUG: Usuario NO logueado -->
<div style="background: yellow; color: black; padding: 10px; margin: 10px;">
  DEBUG: No hay usuario logueado - mostrando página de login
</div>

<div class="text-center">
  <h2 class="text-3xl font-bold text-gray-900 mb-2">
    Acceso Requerido
  </h2>
  <p class="text-gray-600 mb-8">
    Inicia sesión para ver tu perfil
  </p>
  <a 
    href="/login" 
  >
    Iniciar Sesión
  </a>
</div>
{{/if}}
</div>